<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="CardNoBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
    </Style>

    <Style x:Key="CardStyle" TargetType="Border" BasedOn="{StaticResource CardNoBorderStyle}">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
    </Style>

    <Style x:Key="CardWithFooterNoBorderStyle" TargetType="Border" BasedOn="{StaticResource CardNoBorderStyle}">
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style x:Key="CardWithFooterStyle" TargetType="Border" BasedOn="{StaticResource CardStyle}">
        <Setter Property="Padding" Value="0" />
    </Style>

    <Style x:Key="CardFooterStyle" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardStrokeColorDefaultBrush}" />
        <Setter Property="Padding" Value="12" />
    </Style>
</ResourceDictionary>
